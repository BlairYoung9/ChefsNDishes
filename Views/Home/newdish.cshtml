@using ChefsNDishes.Models;
@model Dish;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class = "container p-3">
        <h1 class ="pb-3 m-3 border-bottom">ADD A DISH!</h1>
        <div class = "container d-flex justify-content-between mt-4">
            <div class = "container d-flex justify-content-between mt-4">
            <div class = "col-4">
                <form asp-action = "NewDish">
                    <p class ="d-flex justify-content-between">
                        Dish Name:
                        <span asp-validation-for="Name"></span>
                        <input asp-for ="Name">
                    </p>
                    <p class ="d-flex justify-content-between">
                        Calories:
                        <span asp-validation-for="Calories"></span>
                        <input asp-for ="Calories">
                    </p>
                    <p class ="d-flex justify-content-between">Tastiness
                        <span asp-validation-for="Tastiness"></span>
                        <select asp-for="Tastiness">
                            <option value = "5">5</option>
                            <option value = "4">4</option>
                            <option value = "3">3</option>
                            <option value = "2">2</option>
                            <option value = "1">1</option>
                        </select>
                    </p>
                    <p>Description :
                        <span asp-validation-for="Description"></span>
                        <textarea asp-for ="Description" cols="55" rows="3"></textarea>
                    </p>
                    <p class ="d-flex justify-content-between">
                        Chef ID:
                        <span asp-validation-for="ChefId"></span>
                        <label asp-for ="ChefId"></label>
                        <select asp-for= "ChefId" >
                            @foreach (Chef chef in Model.AvailableChefs)
                            {
                                <option value="@chef.ChefId">@chef.fName @chef.lName</option>
                            }

                        </select>
                    </p>
                    <button class="btn btn-primary mt-2">Register</button>
                </form>
                <a href="/"><button class = "m-3">Home</button></a>
            </div>
        </div>
            <div class = "col-4">
                <a href="/"><button class = "m-3">Chefs</button></a>
                <a href="/dishes"><button class = "m-3">Dishes</button></a>
                <div>
                    <a href="/newchef"><button class = "m-3">Add a chef</button></a>
                    <a href="/newdish"><button class = "m-3">Add a dish</button></a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html