@using ChefsNDishes.Models;
@model IndexView;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class = "container p-3">
        <h1 class ="pb-3 m-3 border-bottom">Check out our selection of dishes!</h1>
        <div class = "container d-flex justify-content-between mt-4">
            <div class = "col-4">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Chef</th>
                            <th>Tastiness</th>
                            <th>Calories</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Dish item in Model.AllDishes)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.MadeBy.fName @item.MadeBy.lName </td>
                                <td>@item.Tastiness</td>
                                <td>@item.Calories</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/"><button class = "m-3">Chefs</button></a>
                <a href="/dishes"><button class = "m-3">Dishes</button></a>
                <div>
                    <a href="/newchef"><button class = "m-3">Add a chef</button></a>
                    <a href="/newdish"><button class = "m-3">Add a dish</button></a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>